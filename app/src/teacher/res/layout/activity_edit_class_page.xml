<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_class_to_user">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/teacher_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/rn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacher_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rn_tv"
        android:layout_centerHorizontal="true"
        android:text="Select a date to view the students who signed up for your  class:"
        android:textAlignment="center"
        android:textSize="10sp" />

    <ListView
        android:id="@+id/dates_lv"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_below="@id/date_label"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/update_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_et"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/update_dates" />


    <Button

        android:id="@+id/add_class_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_dates"
        android:layout_centerHorizontal="true"


        android:text="Remove Class" />

    <EditText
        android:id="@+id/date_et"

        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dates_lv"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Type date(s) here(MM-DD)"
        android:inputType="text"
        android:textAlignment="center" />


</RelativeLayout>