<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminToggleClasses">


    <TextView
        android:id="@+id/openClpsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/CloseClasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Classes"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/openClpsed" />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/OpenClasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Classes"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/CloseClasses" />
</RelativeLayout>